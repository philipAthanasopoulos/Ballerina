<p style="color: green"><%= notice %></p>

<% content_for :title, "Games" %>

<h1>Games</h1>

<div id="games">
  <% @games.each do |game| %>
    <%= render game %>
    <p>
      <%= link_to "Show this game", game %>
    </p>
  <% end %>
</div>

<div class="pagination">
  <%= paginate @games %>
</div>
